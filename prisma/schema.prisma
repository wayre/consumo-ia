generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Measure {
  measure_uuid     String   @id @default(uuid()) @db.Uuid
  customer_code    String
  measure_value    Int
  image_url        String
  measure_datetime DateTime
  measure_type     String
  createdAt        DateTime @default(now())

  @@map("measures")
}
